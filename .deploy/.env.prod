# 환경변수 배포용

# 데이터베이스
DATABASE_URL=jdbc:postgresql://cheese321-db:5432/cheese321
DATABASE_NAME=cheese321
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change_this_secure_password_in_production

# JWT 보안
JWT_SECRET=change_this_to_very_long_secure_secret_key_for_production_environment
JWT_ACCESS_VALIDITY=3600000
JWT_REFRESH_VALIDITY=2592000000

CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== 운영 환경 설정 =====

# 포트 설정
SERVER_PORT=8080
DATABASE_PORT=5432

# 로그 설정
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_FILE_PATH=/logs/cheese321.log

# 추천 서비스
AI_USE_DUMMY=false
AI_SERVICE_URL=http://ai-service:8081
AI_SERVICE_TIMEOUT=30

# 파일 업로드
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=20MB

# 데이터베이스 풀 설정
DB_POOL_SIZE=20
DDL_AUTO=validate

# 모니터링
PROMETHEUS_ENABLED=true
MANAGEMENT_ENDPOINTS=health,info,metrics,prometheus
HEALTH_SHOW_DETAILS=when-authorized

# Swagger
SWAGGER_ENABLED=false

# 애플리케이션 정보
APP_VERSION=0.0.1-SNAPSHOT